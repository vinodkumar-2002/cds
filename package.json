{
  "name": "StudentDB",
  "version": "1.0.0",
  "description": "A Student Project",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^7",
    "@sap/cds-hana": "^2",
    "@sap/xssec": "^3.6.1",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.120.2"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-student": "cds watch --open student/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-course": "cds watch --open course/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "fiori": {
      "lean_draft": true,
      "bypass_draft": true
    },
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db.sqlite"
        }
      },
      "[hybrid]": {
        "db": "hana"
      },
      "[production]": {
        "auth": "xsuaa",
        "db": "hana"
      },
      "auth":"mocked"
      
    }
  },
  "sapux": [
    "app/project1",
    "app/student",
    "app/course"
  ]
}
